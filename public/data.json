  "GLOBAL_DEFAULTS": {
    "calendar_block_minutes": 20,
    "fallback_block_minutes": 5,
    "preferred_time_windows": ["Morning", "Early Evening"],
    "success_definition": "Any tangible artifact produced",
    "progress_metric": "last_touched_date"
  },

  "CONSISTENCY_MODEL": {
    "rules": [
      "Never skip twice",
      "Leave a trace every session",
      "Bad days still count",
      "One active focus per week"
    ],
    "energy_modes": {
      "normal": {
        "calendar_block_minutes": 20,
        "allowed_actions": ["design", "write", "explain"]
      },
      "low": {
        "calendar_block_minutes": 5,
        "allowed_actions": ["outline", "review", "bullet_notes"]
      }
    }
  },

  "WEEKLY_CONTROL": {
    "weekly_focus": null,
    "max_active_topics": 4,
    "weekly_review_minutes": 10,
    "adaptation_rules": {
      "missed_sessions": "Reduce scope, not frequency",
      "low_energy": "Switch to fallback mode"
    }
  },

  "CAREER_TARGET": {
    "target_roles": [
      "Software Architect",
      "Staff Software Engineer",
      "Senior Software Engineer – Architecture / Platform",
      "Principal Engineer (scope-matched)"
    ],
    "avoid_roles": [
      "Firefighting-heavy roles",
      "Vague architect titles",
      "No senior IC ladder"
    ]
  },

